<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_list_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    app:cardBackgroundColor="@color/light_primary"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/category_product_Icon_view"
            style="@style/ProductListItemImage" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/category_product_item_name"
                style="@style/ProductListItemName"
                android:text="Name" />

            <TextView
                android:id="@+id/category_product_item_price"
                style="@style/ProductListItemInfo"
                android:text="Price" />

            <TextView
                android:id="@+id/category_product_item_rating"
                style="@style/ProductListItemInfo"
                android:text="Rating" />

            <TextView
                android:id="@+id/category_product_item_avaliablity"
                style="@style/ProductListItemInfo"
                android:text="Availability" />

        </LinearLayout>

        <ImageView
            android:id="@+id/category_product_bin"
            style="@style/ProductListItemBin" />

    </LinearLayout>

</androidx.cardview.widget.CardView>